@{
    ViewData["Title"] = "Home Page";
}

<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><button data-toggle="modal" data-target="#qst-modal" class="btn btn-primary" onclick="qClearScreen();">Create New</button></h3>
        </div>
        <div class="card-body">
            <div class="table-responsive m-0">
                <table class="table table-striped table-bordered" id="questions">
                    <thead>
                    <tr>
                        <th>No</th>
                        <th>Agreement Number</th>
                        <th>BPKB No.</th>
                        <th>Faktur No.</th>
                        <th>Location Name</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var trx in ViewBag.Transactions)
                    {
                        <tr>
                            <td></td>
                            <td>@trx.agreement_number</td>
                            <td>@trx.bpkb_no</td>
                            <td>@trx.faktur_no</td>
                            <td>@trx.Location.location_name</td>
                            <td><button class='btn btn-warning' onclick=qGetById(@trx.agreement_number);>Edit</button> <button class='btn btn-danger' onclick=qDelete(@trx.agreement_number);>Delete</button></td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
            <div class="modal fade" id="qst-modal">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Transaction Form</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="Agreement Number">Agreement Number</label>
                                        <input type="text" id="agreementNumber" class="form-control" placeholder="Agreement Number">
                                    </div>
                                    <div class="form-group">
                                        <label for="Branch Id">Branch Id</label>
                                        <input type="text" id="branchId" class="form-control" placeholder="Branch Id">
                                    </div>
                                    <div class="form-group">
                                        <label for="No BPKB">No. BPKB</label>
                                        <input type="text" id="noBPKB" class="form-control" placeholder="No. BPKB">
                                    </div>
                                    <div class="form-group">
                                        <label for="Tanggal BPKB In">Tanggal BPKB In</label>
                                        <input type="date" id="bpkbInDate" class="form-control" placeholder="Tanggal BPKB In">
                                    </div>
                                    <div class="form-group">
                                        <label for="Tanggal BPKB">Tanggal BPKB</label>
                                        <input type="date" id="bpkbDate" class="form-control" placeholder="Tanggal BPKB">
                                    </div>
                                    <div class="form-group">
                                        <label for="No Faktur">No. Faktur</label>
                                        <input type="text" id="noFaktur" class="form-control" placeholder="No. Faktur">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="Tanggal Faktur">Tanggal Faktur</label>
                                        <input type="date" id="fakturDate" class="form-control" placeholder="Tanggal Faktur">
                                    </div>
                                    <div class="form-group">
                                        <label for="No Polisi">Nomor Polisi</label>
                                        <input type="text" id="noPolisi" class="form-control" placeholder="Nomor Polisi">
                                    </div>
                                    <div class="form-group">
                                        <label for="Lokasi Penyimpanan">Lokasi Penyimpanan</label>
                                        <select style="width: 100%" id="locationText" name="Option" class="form-control select2bs4">
                                            <option value="null">- Select Location -</option>
                                            @foreach (var loc in ViewBag.Locations)
                                            {
                                            <option value="@loc.location_name" id="@loc.location_id">@loc.location_name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" id="qSave" onclick="qSave();">Submit</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>

@section Scripts{
<!-- jQuery -->
<script src="~/js/plugins/jquery/jquery.min.js"></script>
<!-- jQuery UI 1.11.4 -->
<script src="~/js/plugins/jquery-ui/jquery-ui.min.js"></script>
<!-- DataTables -->
<script src="~/js/plugins/datatables/jquery.dataTables.js"></script>
<script src="~/js/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
<!-- Select2 -->
<script src="~/js/plugins/select2/js/select2.full.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
<!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
<script>
    $.widget.bridge('uibutton', $.ui.button)
    $('.select2bs4').select2({
        theme: 'bootstrap4'
    })
</script>
<!-- Bootstrap 4 -->
<script src="~/js/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- ChartJS -->
<script src="~/js/plugins/chart.js/Chart.min.js"></script>
<!-- overlayScrollbars -->
<script src="~/js/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
<!-- AdminLTE App -->
<script src="~/js/adminlte.js"></script>
<!-- AdminLTE for demo purposes -->
<script src="~/js/demo.js"></script>
<!-- Custom scripts -->
<script src="~/js/ff.js"></script>
}